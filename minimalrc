function! RenameFile()
  let old_name = expand('%')
  let new_name = input('New file name: ', expand('%'), 'file')
  if new_name != '' && new_name != old_name
    exec ':saveas ' . new_name
    exec ':silent !rm ' . old_name
    redraw!
  endif
endfunction

function! RemapNetrw()
  nnoremap <buffer><leader>k :bd<CR>
endfunction

augroup Netrw 
  autocmd!
  autocmd filetype netrw call RemapNetrw()
augroup END
